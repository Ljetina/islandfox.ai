

.dockContainer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: rgba(74, 45, 146, 0.7); /* semi-transparent deep purple tint */
    padding: 20px;
    border-radius: 8px;
    margin: 20px 0;
    backdrop-filter: blur(10px); /* frosted glass effect */
    border: 1px solid rgba(255, 255, 255, 0.1); /* subtle border for depth */
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* subtle shadow for a lifted effect */
}

.dockContainer h2 {
    color: white;
    margin-bottom: 15px;
}

.dockContainer p {
    color: #b8a5d6; /* light purple shade for the text */
    line-height: 1.5;
}

