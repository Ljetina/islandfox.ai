.docsContainer:hover {
  box-shadow: 0px 5px 30px rgba(0, 0, 0, 0.15);
  transform: scale(1.005);
}

.docsContainer h1 {
  margin-top: 2em;
  font-size: 2.5em;
  color: #d1d1d1;
  border-bottom: 2px solid #d1d1d1;
  padding-bottom: 10px;
}

